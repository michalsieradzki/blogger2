<h3>Dodaj komentarz:</h3>
<%= form_for [ @article, @comment ] do |form| %>
  <p> 
    <%= form.label :author_name, "Autor" %>
    <%= form.text_field :author_name %> 
  </p>
  <p> 
    <%= form.label 'Treść' %>
    <%= form.text_area :body %> 
  </p>
  <p><%= form.submit 'Skomentuj' %></p>

<% end %>